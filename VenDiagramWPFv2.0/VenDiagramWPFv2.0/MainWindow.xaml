<Window x:Class="VenDiagramWPFv2._0.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VenDiagramWPFv2._0"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="{Binding SystemParameters.PrimaryScreenHeight}" 
        Width="{Binding SystemParameters.PrimaryScreenWidth}" WindowState="Maximized" WindowStartupLocation="CenterScreen" Background="WhiteSmoke" d:DesignWidth="1543.126" d:DesignHeight="900.685">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="430"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" VerticalAlignment="Top">
            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    Content="Set"
                    Height="40"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,1,0" Background="#FF1D6C61" BorderBrush="#FF1D6C61" FontSize="20"/>
        </Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}"><Run Text="Set A"/></TextBlock>
                <ListBox x:Name="ListboxA" Width="auto" Height="50"
                     Background="{x:Null}" Margin="0,0,0,10" 
                     BorderBrush="#FF1D6C61" Foreground="#FF1D6C61"
                     BorderThickness="1">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
                <StackPanel Orientation="Horizontal" Width="300" Margin="0,0,0,10">
                    <TextBox x:Name="ElementA" materialDesign:HintAssist.Hint="Enter elements"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Width="190"
                         Height="50"
                         Margin="0,0,15,0"
                         materialDesign:HintAssist.Foreground="#FF1D6C61"
                         materialDesign:TextFieldAssist.UnderlineBrush="#FF1D6C61"
                         VerticalAlignment="Center" Foreground="#FF1D6C61" CaretBrush="{x:Null}" BorderBrush="#FF1D6C61" FontSize="16"/>
                    <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}" 
                        Width="40" Height="40" 
                        Background="#FF1D6C61" 
                        BorderBrush="{x:Null}" Click="AddToA" Margin="0,0,10,0">
                        <materialDesign:PackIcon
                                Kind="Add"
                                Height="20"
                                ToolTip="Add element"
                                Width="20" Foreground="#DDFFFFFF" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}" 
                        Width="40" Height="40"
                        Content="Ok"
                        Background="#FF1D6C61" 
                        BorderBrush="{x:Null}" Foreground="#DDFFFFFF" Click="SaveA">
                    </Button>
                </StackPanel>
                <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}"><Run Text="Set B"/></TextBlock>
                <ListBox x:Name="ListboxB" Width="auto" Height="50" 
                     Background="{x:Null}" Margin="0,0,0,10" 
                     Foreground="#FF1D6C61" BorderBrush="#FF1D6C61"
                     BorderThickness="1">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
                <StackPanel Orientation="Horizontal" Width="300" Margin="0,0,0,10">
                    <TextBox x:Name="ElementB" materialDesign:HintAssist.Hint="Enter elements"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Width="190"
                             Height="50"
                             Margin="0,0,15,0"
                             materialDesign:HintAssist.Foreground="#FF1D6C61"
                             materialDesign:TextFieldAssist.UnderlineBrush="#FF1D6C61"
                             VerticalAlignment="Center" Foreground="#FF1D6C61" CaretBrush="{x:Null}" BorderBrush="#FF1D6C61" FontSize="16"/>
                    <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                        Width="40" Height="40" Background="#FF1D6C61"
                        BorderBrush="{x:Null}" Click="AddToB" Margin="0,0,10,0">
                        <materialDesign:PackIcon
                            Kind="Add"
                            Height="20"
                            ToolTip="Add element"
                            Width="20" Foreground="#DDFFFFFF" />
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}" 
                        Width="40" Height="40"
                        Click="SaveB"
                        Content="Ok"
                        Background="#FF1D6C61" 
                        BorderBrush="{x:Null}" Foreground="#DDFFFFFF">
                    </Button>
                </StackPanel>
                <StackPanel x:Name="SetC" Orientation="Vertical" Visibility="Collapsed">
                    <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}"><Run Text="Set C"/></TextBlock>
                    <ListBox x:Name="ListboxC" Width="300" Height="50" 
                     Background="{x:Null}" Margin="0,0,0,10" 
                     Foreground="#FF1D6C61" BorderBrush="#FF1D6C61"
                     BorderThickness="1">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                    <StackPanel Orientation="Horizontal" Width="300" Margin="0,0,0,10">
                        <TextBox x:Name="ElementC" materialDesign:HintAssist.Hint="Enter elements"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Width="190"
                             Height="50"
                             Margin="0,0,15,0"
                             materialDesign:HintAssist.Foreground="#FF1D6C61"
                             materialDesign:TextFieldAssist.UnderlineBrush="#FF1D6C61"
                             VerticalAlignment="Center" Foreground="#FF1D6C61" CaretBrush="{x:Null}" BorderBrush="#FF1D6C61" FontSize="16"/>
                        <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}" 
                            Width="40" Height="40" Background="#FF1D6C61" Margin="0,0,10,0"
                            BorderBrush="{x:Null}" Click="AddToC">
                            <materialDesign:PackIcon
                            Kind="Add"
                            Height="20"
                            ToolTip="Add element"
                            Width="20" Foreground="#DDFFFFFF" />
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}" 
                        Width="40" Height="40"
                        Content="Ok"
                        Background="#FF1D6C61" 
                        BorderBrush="{x:Null}" Foreground="#DDFFFFFF">
                        </Button>
                    </StackPanel>
                </StackPanel>
                <Button x:Name="ShowSetC" Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        Content="Add set C"
                        Click="AddSetC"
                        Width="300"
                        Height="50"
                        materialDesign:RippleAssist.Feedback="#DD000000" Background="#FF1D6C61" BorderBrush="{x:Null}" Foreground="#DDFFFFFF"/>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <Grid Grid.Column="1" VerticalAlignment="Top">
                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    Content="Venn Diagram"
                    Height="40"
                    HorizontalAlignment="Stretch"
                    Margin="1,0,0,0" Background="#FF1D6C61" FontSize="20" BorderBrush="#FF1D6C61"/>
            </Grid>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <ComboBox x:Name="Operation" materialDesign:HintAssist.Hint="--Select Operations--"
                          Margin="0,20,0,15"
                          VerticalAlignment="Center"
                          materialDesign:TextFieldAssist.UnderlineBrush="#FF1D6C61"
                          Width="500" Height="40" BorderBrush="#FF1D6C61" Foreground="#FF1D6C61" FontSize="20" SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="Union"/>
                        <ComboBoxItem Content="Intersection"/>
                        <ComboBoxItem Content="Difference"/>
                        <ComboBoxItem Content="Symmetrical Difference"/>
                    </ComboBox>
                    <materialDesign:Card Background="#FF1D6C61"
                                     Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                                     Width="800"
                                     Height="400"
                                     VerticalAlignment="Center"
                                     Padding="8" Margin="0,0,0,15">
                        <Image x:Name="Diagram" Margin="15"/>
                    </materialDesign:Card>
                    <materialDesign:Card Background="White"
                                     Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                                     Width="800"
                                     Height="200"
                                     VerticalAlignment="Center"
                                     Padding="8" Margin="0,0,0,15">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <ListBox x:Name="ListboxOutputA" Width="auto" Height="50"
                                Background="{x:Null}" Margin="0,0,0,10" 
                                BorderBrush="#FF1D6C61" Foreground="#FF1D6C61"
                                BorderThickness="1">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>
                            <ListBox x:Name="ListboxOutputB" Width="auto" Height="50"
                                Background="{x:Null}" Margin="0,0,0,10" 
                                BorderBrush="#FF1D6C61" Foreground="#FF1D6C61"
                                BorderThickness="1">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>
                            <ListBox x:Name="ListboxOutput" Width="auto" Height="50"
                                Background="{x:Null}" Margin="0,0,0,10" 
                                BorderBrush="#FF1D6C61" Foreground="#FF1D6C61"
                                BorderThickness="1">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                            </ListBox>
                        </StackPanel>
                    </materialDesign:Card>
                    <Grid Width="300">
                        <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                            Height="50" Click="Reset"
                            materialDesign:ButtonAssist.CornerRadius="25" Background="#FF1D6C61" BorderBrush="#FF1D6C61">
                            <TextBlock Text="Reset all" />
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
